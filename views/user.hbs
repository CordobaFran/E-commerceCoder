<section class="container">
    <div class="row mt-5 border shadow rounded p-3" style="height: 600px;">
        <div class="col-lg-3 border rounded">
            <div class="text-center mt-5 mx-auto" style="">
                {{#if userdata.profilePicture}}
                    <img class="rounded-circle" src="{{ userData.profilePicture }}" alt="profilePic" style="width: 200px; height: 200px; object-fit: cover;">
                {{else }}
                    <img class="rounded-circle" src="\profiles\pictures\blank-profilepic.jpg" alt="profilePicBlank" style="width: 200px; height: 200px; object-fit: cover;">
                {{/if }}
            </div>
            <div class="mt-3">
                <p class="fw-bold h2"> {{ userData.username }} </p>
                <p class="fw-bold"> {{ userData.name }} </p>
                <p><span>Email:</span> {{ userData.email }}</p>
                <p><span>Telefono:</span> {{ userData.phoneNumber }}</p>
                <p><span>Edad:</span> {{ userData.age }}</p>
                <div class="text-center">
                    <button type="button" class="btn btn-outline-primary">Editar Perfil</button>
                </div>
            </div>
        </div>
        <div class="col-md-auto col-lg-9 border border rounded">
            <div class="my-3 h-100">
                <h2 class="text-center">Mis Productos Publicados</h2>
                <div  style="height: 480px; overflow-x: scroll">
                    {{> products products=userProducts}}
                </div>
            </div>
        </div>
    </div>
</section>